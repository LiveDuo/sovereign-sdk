{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CallMessage",
  "type": "object",
  "required": [
    "tx"
  ],
  "properties": {
    "tx": {
      "$ref": "#/definitions/EvmTransaction"
    }
  },
  "definitions": {
    "AccessListItem": {
      "type": "object",
      "required": [
        "address",
        "storage_keys"
      ],
      "properties": {
        "address": {
          "type": "array",
          "items": {
            "type": "integer",
            "format": "uint8",
            "minimum": 0.0
          },
          "maxItems": 20,
          "minItems": 20
        },
        "storage_keys": {
          "type": "array",
          "items": {
            "type": "array",
            "items": {
              "type": "integer",
              "format": "uint8",
              "minimum": 0.0
            },
            "maxItems": 32,
            "minItems": 32
          }
        }
      }
    },
    "EvmTransaction": {
      "type": "object",
      "required": [
        "access_lists",
        "chain_id",
        "data",
        "gas_limit",
        "gas_price",
        "max_fee_per_gas",
        "max_priority_fee_per_gas",
        "nonce",
        "sig",
        "value"
      ],
      "properties": {
        "access_lists": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/AccessListItem"
          }
        },
        "chain_id": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        },
        "data": {
          "type": "array",
          "items": {
            "type": "integer",
            "format": "uint8",
            "minimum": 0.0
          }
        },
        "gas_limit": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        },
        "gas_price": {
          "type": "integer",
          "format": "uint128",
          "minimum": 0.0
        },
        "max_fee_per_gas": {
          "type": "integer",
          "format": "uint128",
          "minimum": 0.0
        },
        "max_priority_fee_per_gas": {
          "type": "integer",
          "format": "uint128",
          "minimum": 0.0
        },
        "nonce": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        },
        "sig": {
          "$ref": "#/definitions/Signature"
        },
        "to": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "integer",
            "format": "uint8",
            "minimum": 0.0
          },
          "maxItems": 20,
          "minItems": 20
        },
        "value": {
          "type": "integer",
          "format": "uint128",
          "minimum": 0.0
        }
      }
    },
    "Signature": {
      "type": "object",
      "required": [
        "odd_y_parity",
        "r",
        "s"
      ],
      "properties": {
        "odd_y_parity": {
          "description": "yParity: Signature Y parity; formally Ty",
          "type": "boolean"
        },
        "r": {
          "description": "The R field of the signature; the point on the curve.",
          "type": "array",
          "items": {
            "type": "integer",
            "format": "uint8",
            "minimum": 0.0
          },
          "maxItems": 32,
          "minItems": 32
        },
        "s": {
          "description": "The S field of the signature; the point on the curve.",
          "type": "array",
          "items": {
            "type": "integer",
            "format": "uint8",
            "minimum": 0.0
          },
          "maxItems": 32,
          "minItems": 32
        }
      }
    }
  }
}
